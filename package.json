{
  "title": "CSS Objectnet",
  "name": "css-objectnet",
  "version": "1.0.0",
  "description": "Analyze the ID-Class relations of HTML nodes",
  "main": "manifest.json",
  "author": "Martin Giger (http://humanoids.be)",
  "license": "MIT",
  "devDependencies": {
    "@freaktechnik/eslint-config-extension": "^6.0.0",
    "@freaktechnik/eslint-config-webpack": "^5.1.3",
    "css-loader": "^0.28.1",
    "eslint": "^4.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.30.1",
    "style-loader": "^0.19.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-no-unsupported-browser-features": "^2.0.0",
    "web-ext": "^2.2.2",
    "webpack": "^3.4.1",
    "webpack-webext-plugin": "github:rpl/webpack-webext-plugin"
  },
  "dependencies": {
    "d3": "^4.12.0"
  },
  "scripts": {
    "build": "webpack && web-ext build -s webextension",
    "lint:js": "eslint src/ webpack/ --ext js,json",
    "lint:webext": "webpack && web-ext lint -s webextension",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:webext",
    "test": "npm run lint",
    "start": "webpack --hide-modules && web-ext run -s webextension"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freaktechnik/css-objectnet.git"
  },
  "bugs": {
    "url": "https://github.com/freaktechnik/css-objectnet/issues"
  },
  "homepage": "https://github.com/freaktechnik/css-objectnet",
  "browserslist": [
    "last 1 Firefox versions"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "indentation": 4,
      "color-named": "always-where-possible",
      "plugin/no-unsupported-browser-features": true
    }
  }
}
